<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="360sp" android:layout_height="400sp"
                android:layout_gravity="center"
                android:background="@android:color/white">


    <LinearLayout
            android:id="@+id/cabecalho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5sp">


        <TextView
                android:id="@+id/feedback_popup_TextView_Titulo_RecuperarSenha"
                android:layout_width="0sp"
                android:layout_height="36sp"
                android:layout_weight=".9"
                android:gravity="center"
                android:text="Dar Feedback"
                android:textColor="@color/text_color_dark"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textAlignment="center"/>

        <TextView
                android:id="@+id/feedback_popup_Button_Close"
                android:layout_width="0sp"
                android:layout_height="36sp"
                android:layout_weight=".1"
                android:background="@drawable/round_close_button"
                android:text="X"
                android:textColor="@color/text_color_dark"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_gravity="end"
                android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/cabecalho"
            android:layout_above="@+id/feedback_popup_Button"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_margin="10dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Qual a sua opinião para com a visita realizada?"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:textSize="15dp"/>

        <EditText
                android:id="@+id/feedback_popup_alteracoes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="10dp"
                android:gravity="start"
                android:hint="Preencha suas alterações aqui"
                android:background="@drawable/round_button"
                android:ellipsize="end"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/feedback_popup_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="20sp"
            android:orientation="vertical">

        <Button
                android:id="@+id/feedback_popup_Button_Enviar"
                android:layout_below="@+id/Linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/round_button"
                android:text="enviar"
                android:textColor="@color/text_color_dark"
                android:textStyle="bold"/>

    </LinearLayout>

    <ProgressBar
            android:id="@+id/feedback_popup_ProgressBar"
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>

</RelativeLayout>
