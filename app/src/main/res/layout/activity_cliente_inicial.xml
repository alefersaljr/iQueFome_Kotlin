<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ClienteInicial"
        android:background="@android:color/white">

    <TextView
            android:id="@+id/cadastro_TextView_Cadastro"
            android:layout_width="match_parent"
            android:layout_height="56sp"
            android:paddingTop="13sp"
            android:text="@string/inicial_Toolbar_Menu"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/text_color_dark"/>

    <View
            android:layout_width="250sp"
            android:layout_height="4sp"
            android:layout_marginTop="5sp"
            android:layout_centerHorizontal="true"
            android:background="@color/text_color_dark"
            android:layout_below="@+id/menu_Toolbar"/>

    <include
            android:id="@+id/menu_Toolbar"
            layout="@layout/layout_toolbar"/>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/inicial_Refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/menu_Toolbar"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="56sp">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/inicial_RecyclerView"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <RelativeLayout
            android:id="@+id/inicial_ProgressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#77BDBDBD">


        <ProgressBar
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

    </RelativeLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16sp"
            android:layout_marginEnd="16sp">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floating_Filter_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:borderWidth="0sp"
                android:backgroundTint="@color/text_color_light"
                android:tint="@color/icon_color"
                android:src="@drawable/icon_star_off"
                app:fabSize="mini"
                android:visibility="gone"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floating_Filter_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:borderWidth="0sp"
                android:tint="@color/icon_color"
                android:backgroundTint="@color/text_color"
                android:src="@drawable/icon_filter"
                app:fabSize="mini"
                android:visibility="gone"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floating_Filter_Menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:borderWidth="0sp"
                android:tint="@color/icon_color"
                android:backgroundTint="@color/text_color_dark"
                android:src="@drawable/icon_filter"
                app:fabSize="mini"/>

    </LinearLayout>

</RelativeLayout>