<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ClienteInicial"
        android:background="@drawable/back_default">

    <TextView
            android:id="@+id/cadastro_TextView_Cadastro"
            android:layout_width="match_parent"
            android:layout_height="56sp"
            android:paddingTop="13sp"
            android:text="@string/inicial_Toolbar_Menu"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/text_color"/>

    <View
            android:layout_width="250sp"
            android:layout_height="4sp"
            android:layout_marginTop="5sp"
            android:layout_centerHorizontal="true"
            android:background="@color/text_color"
            android:layout_below="@+id/menu_Toolbar"/>

    <include
            android:id="@+id/menu_Toolbar"
            layout="@layout/layout_toolbar"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/inicial_RecyclerView"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/menu_Toolbar"
            android:layout_marginTop="20sp"/>

    <RelativeLayout
            android:id="@+id/inicial_ProgressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#77b8a076">


        <ProgressBar
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/composition_Refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10sp"
            android:layout_marginStart="10sp"
            android:src="@drawable/icon_refresh"
            app:borderWidth="0sp"
            android:backgroundTint="@color/text_color"
            app:fabSize="mini"/>

</RelativeLayout>